<div class="sixteen columns">
  {{analysis-chart
    breakEvenQuantity=breakEvenQuantity
    sellingPriceValue=sellingPrice
    fixedCostsValue=fixedCosts
    unitCostsValue=unitCosts
  }}
</div>

<div class="eight columns">
  <div>
    <label>Fixed Costs
    {{input type="number" min=0 value=fixedCosts}}
    </label>
  </div>
  <div>
    <label>Unit Costs
    {{input type="number" min=0 value=unitCosts}}
    </label>
  </div>
  <div>
    <label>Selling Price
    {{input type="number" min=0 value=sellingPrice}}
    </label>
  </div>
</div>

<div class="eight columns">
  {{break-even-analysis-equation
    breakEvenQuantity=breakEvenQuantity
    sellingPrice=sellingPrice
    fixedCosts=fixedCosts
    unitCosts=unitCosts
  }}
</div>
